// matrix addition
#include <stdio.h>

int main() {
    int i,j,n,m;
    int mat1[20][20];
    int mat2[20][20];
    int result[100][100];
    printf("enter number of rows: ");
    scanf("%d",&m);
    printf("enter number of columns: ");
    scanf("%d",&n);
    printf("Enter elements of matrix 1: \n");
    for(i=0;i<m;i++)
    {
        for(j=0;j<n;j++)
        {
            scanf("%d",&mat1[i][j]);
        }
        
    }
    printf("MATRIX 1: \n");
    for(i=0;i<m;i++)
    {
        for(j=0;j<n;j++)
        {
            printf("%d ",mat1[i][j]);
        }
        printf("\n");
    }
    printf("Enter elements of matrix 2: \n");
    for(i=0;i<m;i++)
    {
        for(j=0;j<n;j++)
        {
            scanf("%d",&mat2[i][j]);
        }
        
    }
    
    printf("MATRIX 2: \n");
    for(i=0;i<m;i++)
    {
        for(j=0;j<n;j++)
        {
            printf("%d ",mat2[i][j]);
        }
        printf("\n");
    }
    printf("Adding MATRIX 1 and MATRIX 2\n");
    for(i=0;i<m;i++)
    {
        for(j=0;j<n;j++)
        {
            result[i][j]=mat1[i][j]+ mat2[i][j];
            printf("%d ",result[i][j]);
        }
        printf("\n");
    }
    
    

    return 0;
}
